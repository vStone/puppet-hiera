source :rubygems

gem 'rake'
gem 'puppet-lint', '>=0.2.0'
gem 'rspec', '>2'
gem 'rspec-puppet', '>=0.1.3'

# Used in our spec tests for comparing hashes.
gem 'diff_matcher'

## We only test puppet 2.7 since >3.0 has a hiera integrated.
gem 'puppet', '~> 2.7'
gem 'puppetlabs_spec_helper', '>=0.2.0'

# Hiera
gem 'hiera', '~>1'
gem 'hiera-puppet', '~>1'

## Contains patch for hiera >=1
gem 'rspec-hiera-puppet', :git => 'git@github.com:UnifiedPost/rspec-hiera-puppet.git'
